# ruff: noqa: F821, F706
"""Send events to Segment analytics platform."""

from __future__ import annotations

from typing import Any, Dict, Optional
import json

from server_utils.external_api import ExternalApiClient, error_output, validation_error


_DEFAULT_CLIENT = ExternalApiClient()


def _build_preview(
    *,
    operation: str,
    event: Optional[str],
    user_id: Optional[str],
    properties: Optional[Dict[str, Any]],
) -> Dict[str, Any]:
    """Build a preview of the Segment operation."""
    preview: Dict[str, Any] = {
        "operation": operation,
        "url": "https://api.segment.io/v1/" + operation,
        "method": "POST",
        "auth": "Basic Auth with Write Key",
    }
    if event:
        preview["event"] = event
    if user_id:
        preview["user_id"] = user_id
    if properties:
        preview["properties"] = properties
    return preview


def main(
    *,
    operation: str = "track",
    event: str = "",
    user_id: str = "",
    anonymous_id: str = "",
    properties: str = "{}",
    traits: str = "{}",
    context: str = "{}",
    SEGMENT_WRITE_KEY: str = "",
    dry_run: bool = True,
    timeout: int = 60,
    client: Optional[ExternalApiClient] = None,
    request_context=None,
) -> Dict[str, Any]:
    """Send events to Segment analytics platform.

    Operations:
    - track: Track user actions and events
    - identify: Identify and update user traits
    - page: Track page views
    - screen: Track screen views (mobile)
    - group: Associate user with a group
    """

    normalized_operation = operation.lower()
    valid_operations = {"track", "identify", "page", "screen", "group"}

    if normalized_operation not in valid_operations:
        return validation_error("Unsupported operation", field="operation")

    # Validate credentials
    if not SEGMENT_WRITE_KEY:
        return error_output("Missing SEGMENT_WRITE_KEY", status_code=401)

    # Validate required fields
    if not user_id and not anonymous_id:
        return validation_error("Either user_id or anonymous_id is required", field="user_id/anonymous_id")

    if normalized_operation == "track" and not event:
        return validation_error("Event name is required for track operation", field="event")

    # Parse JSON fields
    try:
        parsed_properties = json.loads(properties) if isinstance(properties, str) else properties
        parsed_traits = json.loads(traits) if isinstance(traits, str) else traits
        parsed_context = json.loads(context) if isinstance(context, str) else context
    except json.JSONDecodeError as e:
        return validation_error(f"Invalid JSON: {str(e)}", field="properties/traits/context")

    # Return preview if in dry-run mode
    if dry_run:
        return {
            "output": _build_preview(
                operation=normalized_operation,
                event=event if event else None,
                user_id=user_id if user_id else anonymous_id,
                properties=parsed_properties if parsed_properties else None,
            )
        }

    # Execute actual API call
    api_client = client or _DEFAULT_CLIENT

    try:
        import base64

        # Build payload based on operation
        payload: Dict[str, Any] = {}
        if user_id:
            payload["userId"] = user_id
        if anonymous_id:
            payload["anonymousId"] = anonymous_id
        if parsed_context:
            payload["context"] = parsed_context

        if normalized_operation == "track":
            payload["event"] = event
            if parsed_properties:
                payload["properties"] = parsed_properties

        elif normalized_operation == "identify":
            if parsed_traits:
                payload["traits"] = parsed_traits

        elif normalized_operation in ("page", "screen"):
            if event:
                payload["name"] = event
            if parsed_properties:
                payload["properties"] = parsed_properties

        elif normalized_operation == "group":
            if not event:
                return validation_error("Group ID is required", field="event")
            payload["groupId"] = event
            if parsed_traits:
                payload["traits"] = parsed_traits

        # Encode write key for Basic Auth
        auth_string = f"{SEGMENT_WRITE_KEY}:"
        encoded_auth = base64.b64encode(auth_string.encode()).decode()

        headers = {
            "Authorization": f"Basic {encoded_auth}",
            "Content-Type": "application/json",
        }

        url = f"https://api.segment.io/v1/{normalized_operation}"

        response = api_client.post(
            url=url,
            headers=headers,
            json=payload,
            timeout=timeout,
        )

        if not response.ok:
            return error_output(
                f"Segment API error: {response.text}",
                status_code=response.status_code,
                response=response.text,
            )

        return {"output": response.json()}

    except Exception as e:
        return error_output(str(e), status_code=500)
