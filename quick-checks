#!/usr/bin/env bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
REPO_ROOT=${SCRIPT_DIR}
UNIT_ARGS=("$@")
"${REPO_ROOT}/scripts/checks/run_ruff.sh"
"${REPO_ROOT}/scripts/checks/run_pylint.sh"
"${REPO_ROOT}/scripts/checks/run_mypy.sh"
"${REPO_ROOT}/scripts/checks/run_eslint.sh"
"${REPO_ROOT}/scripts/checks/run_stylelint.sh"
"${REPO_ROOT}/scripts/checks/verify_test_index.sh"
if [[ "${SKIP_QUICK_UNIT:-0}" != "1" ]]; then
  "${REPO_ROOT}/scripts/checks/run_unit_tests_quick.sh" "${UNIT_ARGS[@]}"
fi
